{
  "version": 2,
  "buildCommand": "prisma generate && next build",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "functions": {
    "app/api/**/*.ts": {
      "memory": 1536,
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/db-maintenance",
      "schedule": "0 0 * * *"
    }
  ],
  "env": {
    "NEXT_PUBLIC_VERCEL_ENV": "production"
  }
} 